{
    "compilerOptions": {

        //= ESM AND NODENEXT ========================================================================
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022", // Or ESNext, or a recent ECMAScript version

        //== STRONG TYPESCRIPT ======================================================================
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,

        "emitDeclarationOnly": true,

        //= FOR MONOREPOS WITH PROJECT REFERENCES ===================================================
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        // "noEmit": true,

        //= DECORATORS ==========================================================================
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        //= ALLOWED =============================================================================
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,

        //= PATH ALIASES ========================================================================
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "paths": { }

    },
    "exclude": [
        "node_modules",
        "dist"
    ]

}



