{
    "name": "focused-ux",
    "scripts": {
        "== BUILD ============================================================================================ ": "",
        "build": "pnpm run build:assets && turbo run build --summarize --output-logs=new-only",
        "build:clean": "pnpm run clean && pnpm run build",
        "build:assets": "bun packages/dynamicons/core/src/scripts/build_dynamicon_assets.ts",
        "build:assets_old": "cross-env NODE_NO_WARNINGS=1 tsx ./src/scripts/build_dynamicon_assets.ts",
        "build:assets:files": "bun ./src/scripts/build_dynamicon_assets.ts file",
        "build:assets:folders": "bun ./src/scripts/build_dynamicon_assets.ts folder",
        
        "== FINALIZE ========================================================================================= ": "",
        "pack": "mkdirp vsix_packages && turbo run package",
        "pack:clean": "pnpm run clean && mkdirp vsix_packages && turbo run package",
        
        "== WATCH ============================================================================================ ": "",
        "watch-only": "turbo run watch-only",
        "== VALIDATE ========================================================================================= ": "",
        "check-types": "turbo run check-types",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "validate": "node ./packages/tools/src/validate/index.js",
        "vlint": "node ./packages/tools/src/validate/index.js lint",
        "vdeps": "node ./packages/tools/src/validate/index.js deps",
        "vtsc": "node ./packages/tools/src/validate/index.js tsc",
        "tsum": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./packages/tools/src/scripts/node/aggregate-tsc-errors.ts",
        "lsum": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./packages/tools/src/scripts/node/aggregate-eslint-errors.ts",
        "tval": "turbo run check-types && turbo run lint",
        "tfix": "turbo run check-types && turbo run lint:fix",
        "eslint": "eslint \"**/src/**/*.{js,jsx,ts,tsx,cjs}\"",
        "== UTILITIES ======================================================================================== ": "",
        "version-bump": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run packages/shared/tools/src/scripts/version_bump.ts",
        "clean": "turbo run clean --output-logs=errors-only && rimraf node_modules/.cache/turbo .turbo",
        "nuke": "rimraf node_modules && rimraf packages/*/node_modules && pnpm store prune",
        "nuke:full": "pnpm run clean && rimraf packages/*/node_modules && rimraf node_modules && rimraf pnpm-lock.yaml && pnpm install"
    },
    "devDependencies": {
        "@focused-ux/config-eslint": "workspace:*",
        "@focused-ux/tools": "workspace:*",
        "@types/node": "latest",
        "@types/vscode": "latest",
        "@vitest/coverage-v8": "^3.1.4",
        "bun": "^1.2.15",
        "cross-env": "^7.0.3",
        "knip": "^5.59.1",
        "mkdirp": "^3.0.1",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "turbo": "^2.5.4",
        "typescript": "^5.8.3"
    },
    "version": "0.1.1",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "type": "module",
    "engines": {
        "node": ">=20"
    }
}
