{
    "name": "focused-ux",
    "scripts": {
        
              
      
        "build:debug_old": "pnpm run build && powershell -Command \"$now = (Get-Date -Format 'yyyy-MM-dd HH:mm:ss'); Write-Host \\\"`$thresholdTime = Get-Date `\\\"$now`\\\"\\\"\"",
        "build:debug": "pnpm run build && powershell -ExecutionPolicy Bypass -File ./_scripts/print-build-debug-info.ps1",
    
    
        
        "tsum": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./packages/tools/src/scripts/node/aggregate-tsc-errors.ts",
        "lsum": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./packages/tools/src/scripts/node/aggregate-eslint-errors.ts",
        "tval":        "turbo run check-types && turbo run lint",
        "tfix":        "turbo run check-types && turbo run lint:fix",
        "check-types": "turbo run check-types",
        "lint":        "turbo run lint",
        "lint:fix":    "turbo run lint:fix",
        "build": "turbo run build",
        "dev": "turbo run dev",
        "watch-only": "turbo run watch-only",
        "package": "mkdirp vsix_packages && turbo run package",
        "clean": "turbo run clean && rimraf node_modules/.cache/turbo .turbo",
        "nuke": "rimraf node_modules && rimraf packages/*/node_modules && pnpm store prune",
        "nuke:full": "rimraf node_modules && rimraf packages/*/node_modules && rimraf pnpm-lock.yaml && pnpm install",
        "validate": "node ./packages/tools/src/validate/index.js",
        "vlint": "node ./packages/tools/src/validate/index.js lint",
        "vdeps": "node ./packages/tools/src/validate/index.js deps",
        "vtsc": "node ./packages/tools/src/validate/index.js tsc",
        "eslint": "eslint \"**/src/**/*.{js,jsx,ts,tsx,cjs}\""
    },
    "devDependencies": {
        "@focused-ux/tools": "workspace:*",
        "focused-ux-dynamicons": "workspace:*",
        "@antfu/eslint-config": "^4.13.2",
        "@eslint/js": "^9.27.0",
        "@seahax/eslint-plugin-wrap": "^0.6.7",
        "@turbo/gen": "latest",
        "@types/node": "latest",
        "@types/vscode": "latest",
        "@typescript-eslint/parser": "^8.33.0",
        "@vitest/coverage-v8": "^3.1.4",
        "cpx": "^1.5.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.27.0",
        "eslint-plugin-import": "^2.31.0",
        "knip": "^5.59.1",
        "mkdirp": "^3.0.1",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "turbo": "^2.5.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.0"
    },
    "version": "0.1.0",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "type": "module",
    "engines": {
        "node": ">=20"
    }
}