{
    "extends": [ "//" ],

    "tasks": {
        "build": { //>
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**"
            ]
        }, //<

        "lint": { //>
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        }, //<

        "lint:fix": { //>
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        }, //<
        
        "check-types": { //>
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        }, //<

        "dev": { //>
            "cache": false,
            "persistent": true
        } //<

    }
}