        "build": {
        "dependsOn": ["^build"],
        "outputs": [
            "dist/**" // ONLY dist/**
        ],
        "inputs": [
            "src/**",
            "cli/**",
            "assets/**",
            "package.json",
            "tsconfig.json",
            "!**/.turbo/**"
        ]
    },
        
        
        "build:assets": {
            "dependsOn": [
                "^build:assets"
            ],
            "outputs": [
                "dist/assets/**"
            ]
        },
        "dev": {
            "cache": false,
            "dependsOn": [
                "^build"
            ],
            "persistent": true
        },
        "watch-only": {
            "cache": false,
            "persistent": true
        }
    }
}