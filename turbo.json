{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        // "tsconfig.base.json"
    ],
    "tasks": {
        "clean": {
            "cache": false
        },
        
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        
        "lint:fix": {
            "dependsOn": [
                "^lint:fix"
            ]
        },

        "package": {
            "dependsOn": [
                "^build"
            ]
        },

        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },

        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },

        "build:assets": {
            "dependsOn": [
                "^build:assets"
            ],
            "outputs": [
                "dist/assets/**"
            ]
        },

        "dev": {
            "cache": false,
            "dependsOn": [
                "^build"
            ],
            "persistent": true
        },

        "watch-only": {
            "cache": false,
            "persistent": true
        }
    }
}