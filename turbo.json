            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "lint:fix": {
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "package": {
            "dependsOn": [
                "^build"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
