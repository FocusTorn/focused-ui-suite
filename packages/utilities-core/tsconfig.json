{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "composite": true,
        "rootDir": "src",
        "outDir": "./dist",
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "ext/**/*"
    ],
}


