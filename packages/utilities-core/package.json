{
    "name": "@focused-ux/utilities-core",
    "version": "0.1.0",
    "scripts": {
        "== BUILD ============================================================================================ ": "",
        "build": "pnpm run build:types && pnpm run build:js",
        "build:types": "tsc -p tsconfig.json",
        "build:js": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --platform=node --format=esm --external:vscode --external:tsyringe --external:reflect-metadata",
        
        "== WATCH ============================================================================================ ": "",
        "watch:types": "tsc -p tsconfig.json --watch",
        "watch:js": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --platform=node --format=esm --external:vscode --external:tsyringe --external:reflect-metadata --watch",
        
        "== VALIDATE ========================================================================================= ": "",
        "check-types": "tsc --noEmit -p tsconfig.json --pretty",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        
        "== UTILITIES ======================================================================================== ": "",
        "clean": "rimraf ./dist .turbo"
        
    },
    "dependencies": {
        "gray-matter": "^4.0.3",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0"
    },
    "devDependencies": {
        "@types/node": "^20.17.47",
        "@types/vscode": "^1.100.0",
        "esbuild": "^0.25.4",
        "gpt-tokenizer": "^2.9.0",
        "rimraf": "^5.0.5",
        "strip-json-comments": "^5.0.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "type": "module",
    "private": true,
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    }
    
    
}