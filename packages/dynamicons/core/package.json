{
    "name": "@focused-ux/dynamicons-core",
    "version": "0.1.0",
    "scripts": {
        "== BUILD ============================================================================================ ": "",
        "build": "pnpm run build:types && pnpm run build:js",
        "build:types": "tsc -p tsconfig.json",
        "build:js":  "esbuild ./src/index.ts --bundle --outfile=dist/index.js  --format=esm --platform=node --external:vscode --external:tsyringe --external:reflect-metadata --external:@focused-ux/utilities-core",
        "build:cjs": "esbuild ./src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node --external:vscode --external:tsyringe --external:reflect-metadata --external:@focused-ux/utilities-core",

        "== ASSETS =========================================================================================== ": "",
        "build:assets": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./src/scripts/build_dynamicon_assets.ts",
        "build:assets:files": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./src/scripts/build_dynamicon_assets.ts file",
        "build:assets:folders": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./src/scripts/build_dynamicon_assets.ts folder",
        
        "== WATCH ============================================================================================ ": "",
        "watch-only": "pnpm run watch:types & pnpm run watch:js",
        "watch:types": "tsc -p tsconfig.json --watch",        
        "watch:js":     "esbuild ./src/index.ts --bundle --outfile=dist/index.js  --platform=node --format=esm --external:vscode --external:tsyringe --external:reflect-metadata --external:@focused-ux/utilities-core --watch",
        "watch:cjs": "esbuild ./src/index.ts --bundle --outfile=dist/index.cjs --platform=node --format=cjs --external:vscode --external:tsyringe --external:reflect-metadata --external:@focused-ux/utilities-core --watch",

        "== VALIDATE ========================================================================================= ": "",
        "check-types": "tsc --noEmit -p tsconfig.json --pretty",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        
        "== UTILITIES ======================================================================================== ": "",
        "clean": "rimraf ./dist .turbo",
        "optimize:icons": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run  ./src/scripts/optimize_icons.ts",
        "generate:manifests": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run  ./src/scripts/generate_icon_manifests.ts",
        "generate:previews": "cross-env NODE_NO_WARNINGS=1 pnpm exec ts-run ./src/scripts/generate_icon_previews.ts"
        
    },
    "dependencies": {
        "@focused-ux/utilities-core": "workspace:*",
        "tsyringe": "^4.10.0"
    },
    "devDependencies": {
        "typescript": "^5.8.3",
        "esbuild": "^0.25.4",
        "@types/node": "^20.17.47",
        "@types/vscode": "^1.100.0",
        "ts-node": "^10.9.2",
        "rimraf": "^5.0.5",
        "svgo": "^3.2.0",
        "sharp": "^0.33.3",
        "puppeteer": "^22.6.5",
        "strip-json-comments": "^5.0.2"
    },
    "type": "module",
    "private": true,
    
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    }
    
    
    
    
    
    
}