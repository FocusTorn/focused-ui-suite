{
    "name": "@focused-ui/dynamicons-core",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "check-types": "tsc --noEmit -p tsconfig.json --pretty",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        
        "build": "pnpm run build:types && pnpm run build:js",
        "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
        "build:js": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --platform=node --format=esm --external:vscode --external:tsyringe --external:reflect-metadata --external:@focused-ui/utilities-core",
        
        "clean:dist_assets": "rimraf ./dist/assets",
        "optimize:icons": "ts-node ./scripts/optimize_icons.ts",
        "generate:base_manifest": "ts-node ./scripts/generate_icon_manifests.ts",
        "build:assets": "pnpm run clean:dist_assets && pnpm run optimize:icons && pnpm run generate:base_manifest"
    },
    "dependencies": {
        "@focused-ui/utilities-core": "workspace:*",
        "tsyringe": "^4.10.0",
        "reflect-metadata": "^0.2.2"
    },
    "devDependencies": {
        "typescript": "^5.8.3",
        "esbuild": "^0.25.4",
        "@types/node": "^20.17.47",
        "@types/vscode": "^1.100.0",
        "ts-node": "^10.9.2",
        "rimraf": "^5.0.5",
        "svgo": "^3.2.0",
        "sharp": "^0.33.3",
        "puppeteer": "^22.6.5",
        "strip-json-comments": "^5.0.2"
    },
    "peerDependencies": {
        
    }
}