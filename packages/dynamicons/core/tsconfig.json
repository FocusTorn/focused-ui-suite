{
    "extends": "@focused-ux/tsconfig/tsconfig.base.json",
    
    "compilerOptions": {
        "declarationMap": false,
        
        //= PATH ALIASES ========================================================================
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts"
    ]
}


