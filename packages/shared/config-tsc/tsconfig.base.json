{
    "compilerOptions": {

        //= ESM AND NODENEXT ========================================================================
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",

        //== STRONG TYPESCRIPT ======================================================================
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,

        //= FOR MONOREPOS WITH PROJECT REFERENCES ===================================================
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "noEmitOnError": true,

        //= DECORATORS ==========================================================================
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        //= ALLOWED =============================================================================
        "allowSyntheticDefaultImports": true,
        "allowJs": true,

        //= PATH ALIASES ========================================================================
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.mts",
        "src/**/*.mjs",
        "src/**/*.cts",
        "src/**/*.cjs",
        
        "**/_scripts/**/*.ts",
        "**/_scripts/**/*.tsx",
        "**/_scripts/**/*.js",
        "**/_scripts/**/*.jsx",
        "**/_scripts/**/*.mts",
        "**/_scripts/**/*.mjs",
        "**/_scripts/**/*.cts",
        "**/_scripts/**/*.cjs"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}






